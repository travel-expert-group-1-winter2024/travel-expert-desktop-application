<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="530.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.travelexpertdesktopapplication.controllers.ProductController">

    <children>
        <!-- Search Field -->
        <Label layoutX="150.0" layoutY="103.0" text="Search Product:" />
        <TextField fx:id="txtSearch" layoutX="280.0" layoutY="103.0" prefWidth="200" />
        <Button fx:id="btnSearch" layoutX="490.0" layoutY="103.0" text="Search" />
        <Button fx:id="btnReset" layoutX="560.0" layoutY="103.0" onAction="#resetSearch" text="Reset" />

        <!-- TableView -->
        <TableView fx:id="tableProducts" layoutX="150.0" layoutY="143.0" prefHeight="250" prefWidth="500">
            <columns>
                <TableColumn fx:id="productIdColumn" prefWidth="100" text="Product ID" />
                <TableColumn fx:id="productNameColumn" prefWidth="400" text="Product Name" />
            </columns>
        </TableView>

        <!-- Button Layout -->
        <HBox layoutX="150.0" layoutY="403.0" spacing="10">
            <Button fx:id="btnAdd" minWidth="120" onAction="#onAddProduct" text="Add Product" />
            <Button fx:id="btnUpdate" minWidth="120" onAction="#onUpdateProduct" text="Update Product" />
            <Button fx:id="btnDelete" minWidth="120" onAction="#onDeleteProduct" text="Delete Product" />
        </HBox>
    </children>
</AnchorPane>
