<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="350.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.travelexpertdesktopapplication.controllers.SignupController">

    <VBox alignment="CENTER" layoutX="20.0" layoutY="30.0"
          prefHeight="350.0" prefWidth="310.0" spacing="10"
          AnchorPane.topAnchor="30.0" AnchorPane.bottomAnchor="20.0"
          AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">

        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Signup Form" />

        <Label text="Username:" />
        <TextField fx:id="txtUsername" promptText="Enter username" />

        <Label text="Password:" />
        <PasswordField fx:id="txtPassword" promptText="Enter password" />

        <Label text="Confirm Password:" />
        <PasswordField fx:id="txtConfirmPassword" promptText="Confirm password" />

        <Label text="Select Role:" />
        <ChoiceBox fx:id="roleChoiceBox" />

        <Button fx:id="btnSignup" text="Signup" onAction="#onSignup"/>
        <Button fx:id="btnCancel" text="Cancel" onAction="#onCancel"/>
    </VBox>

</AnchorPane>
