<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane style="-fx-background-color: #F9F9F9;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.travelexpertdesktopapplication.controllers.ChatController">
    <children>
        <VBox prefHeight="500" prefWidth="400" spacing="10" style="-fx-background-color: #FFFFFF; -fx-border-radius: 10; -fx-padding: 10px; -fx-border-color: #DDDDDD;">
            <ListView fx:id="customerListView" prefHeight="80" style="-fx-background-color: #F5F5F5; -fx-border-radius: 10; -fx-background-radius: 10; -fx-text-fill: #333333; -fx-border-color: #DDDDDD;" />
            <TextArea fx:id="chatArea" editable="false" prefHeight="300" style="-fx-background-color: #FFFFFF; -fx-border-radius: 10; -fx-background-radius: 10; -fx-text-fill: #333333; -fx-padding: 10px; -fx-border-color: #DDDDDD;" wrapText="true" />
            <HBox spacing="5">
                <TextField fx:id="messageField" promptText="Type a message..." style="-fx-background-color: #FFFFFF; -fx-border-radius: 10; -fx-background-radius: 10; -fx-text-fill: #333333; -fx-padding: 10px; -fx-border-color: #DDDDDD;" />
                <Button fx:id="sendButton" onAction="#sendMessage" style="-fx-background-color: #0078D7; -fx-border-radius: 10; -fx-text-fill: white; -fx-padding: 10px 15px; -fx-font-weight: bold;" text="Send" />
            </HBox>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>

        </VBox>
    </children>
</AnchorPane>
