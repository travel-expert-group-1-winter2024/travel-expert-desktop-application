<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.travelexpertdesktopapplication.controllers.ChatController">
   <children>
      <VBox alignment="CENTER" spacing="10">
          <ListView fx:id="customerListView" prefHeight="100" />  <!-- âœ… Displays active chatrooms -->
          <TextArea fx:id="chatArea" editable="false" prefHeight="300" wrapText="true" />
          <HBox spacing="5">
              <TextField fx:id="messageField" promptText="Enter message" />
              <Button fx:id="sendButton" onAction="#sendMessage" text="Send" />
          </HBox>
      </VBox>
   </children>
</AnchorPane>
