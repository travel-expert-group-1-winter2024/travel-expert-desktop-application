<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.travelexpertdesktopapplication.controllers.ProductFormController"
      alignment="CENTER" spacing="15">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <children>
        <Label text="Product Form" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <Label text="Product ID:" />
        <TextField fx:id="txtProductId" promptText="Enter product ID" />

        <Label text="Product Name:" />
        <TextField fx:id="txtProductName" promptText="Enter product name" />

        <HBox spacing="10">
            <Button fx:id="btnSave" text="Save" onAction="#onSave"/>
            <Button fx:id="btnCancel" text="Cancel" onAction="#onCancel"/>
        </HBox>
    </children>
</VBox>
